###############################################################################
#                                 [倒计时.lst]
#                           to list items of timeout
###############################################################################

#==============================================================================
#####----{功能}----
#------------------------------------------------------------------------------
function ini_timeout {
	ini_get --set=TO3 ${SET}/倒计时.ini ${TIME_OUT}:秒3
	ini_get --set=TO5 ${SET}/倒计时.ini ${TIME_OUT}:秒5
	ini_get --set=TO7 ${SET}/倒计时.ini ${TIME_OUT}:秒7
	ini_get --set=TO10 ${SET}/倒计时.ini ${TIME_OUT}:秒10
	ini_get --set=TO15 ${SET}/倒计时.ini ${TIME_OUT}:秒15
	ini_get --set=TO20 ${SET}/倒计时.ini ${TIME_OUT}:秒20
}
#------------------------------------------------------------------------------
function save_timeout {
	save_env --file=${cmdpath}/grubenv TIME_OUT
	ini_timeout
	export TIME_OUT TO3 TO5 TO7 TO10 TO15 TO20
	configfile ${SET}/2-1.倒计时.lst
}
#==============================================================================
default="'${TIME_OUT}'"
#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --hotkey "esc" {
	set SELECTED=倒计时
	configfile ${SET}/2.设置.lst
}
#==============================================================================
ini_timeout
#==============================================================================
#####----{条目}----
#------------------------------------------------------------------------------
menuentry "${TO3}  3" --class "倒计时/3" --id "'3'" {
	set TIME_OUT=3
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO5}  5" --class "倒计时/5" --id "'5'" {
	set TIME_OUT=5
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO7}  7" --class "倒计时/7" --id "'7'" {
	set TIME_OUT=7
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO10} 10" --class "倒计时/10" --id "'10'" {
	set TIME_OUT=10
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO15} 15" --class "倒计时/15" --id "'15'" {
	set TIME_OUT=15
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO20} 20" --class "倒计时/20" --id "'20'" {
	set TIME_OUT=20
	save_timeout
}
#==============================================================================

#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --hotkey "esc" {
	set SELECTED=倒计时
	configfile ${SET}/2.设置.lst
}
#==============================================================================
global_environment