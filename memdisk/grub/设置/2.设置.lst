###############################################################################
#                                [设置.lst]
#                         to list items of settings
###############################################################################

#==============================================================================
#####----{条件}----
#------------------------------------------------------------------------------
if [ "开" == "${USB_MOUSE}" ];then
	set USB=(USB)
else
	set USB=
fi
#------------------------------------------------------------------------------
if [ "开" == "${PS2_MOUSE}" ];then
	set PS2=(PS2)
else
	set PS2=
fi
#------------------------------------------------------------------------------
if [ "关" != "${dark}" ]; then
	set COLOR=${COLOR_DARK}
else
	set COLOR=${COLOR_LIGHT}
fi
#==============================================================================
default=${SELECTED}
#==============================================================================
#####----{条目}----
#------------------------------------------------------------------------------
menuentry "${MENU_TIMEOUT}${TIME_OUT}" --class "设置/倒计时" --id "倒计时" {configfile ${SET}/2-1.倒计时.lst}
#------------------------------------------------------------------------------
menuentry "${MENU_LANG}" --class "设置/语言" --id "语言" {configfile ${SET}/2-2.语言.lst}
#------------------------------------------------------------------------------
menuentry "${MENU_SLOT}" --class "设置/槽位" --id "槽位" {configfile ${SET}/2-3.槽位.lst}
#------------------------------------------------------------------------------
menuentry "${MENU_SET_THEME}[${FYDEOS_VERSION}] [${COLOR}]" --class "设置/主题" --id "主题" {configfile ${SET}/2-4.主题.lst}
#------------------------------------------------------------------------------
submenu "${MENU_MOUSE}${USB}${PS2}" --class "设置/鼠标" --id "鼠标" {source ${SET}/2-5.鼠标.lst}
#==============================================================================

#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --hotkey "esc" {
	set SELECTED=设置
	configfile ${prefix}/菜单.lst
}
#==============================================================================
global_environment