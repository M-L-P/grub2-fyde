###############################################################################
#                                 [语言.lst]
#                         to list items of languages
###############################################################################

#==============================================================================
#####----{功能}----
#------------------------------------------------------------------------------
function ini_lang {
	ini_get --set=LANG1 ${SET}/语言.ini ${lang}:语1
	ini_get --set=LANG2 ${SET}/语言.ini ${lang}:语2
	ini_get --set=LANG3 ${SET}/语言.ini ${lang}:语3
}
#------------------------------------------------------------------------------
function save_lang {
	save_env --file=${cmdpath}/grubenv lang
	ini_lang
	export lang LANG1 LANG2 LANG3
	refresh_lang
	configfile ${SET}/2-2.语言.lst
}
#==============================================================================
if [ -n "${lang}" ]; then
	default=${lang}
else
	default=Eng
fi
#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --id "back" --hotkey "esc" {
	set SELECTED=语言
	configfile ${SET}/2.设置.lst
}
#==============================================================================
ini_lang
#==============================================================================
#####----{条目}----
#------------------------------------------------------------------------------
menuentry "${LANG1} English" --class "语言/Eng" --id "Eng" {
	set lang=
	save_lang
}
#------------------------------------------------------------------------------
menuentry "${LANG2} 简体中文" --class "语言/简" --id "zh_CN" {
	set lang=zh_CN
	save_lang
}
#------------------------------------------------------------------------------
menuentry "${LANG3} 繁體中文" --class "语言/繁" --id "zh_TW" {
	set lang=zh_TW
	save_lang
}
#==============================================================================
global_environment