###############################################################################
#                                 [版本.lst]
#                          to list items of versions
###############################################################################

#==============================================================================
#####----{功能}----
#------------------------------------------------------------------------------
function ini_version {
	ini_get --set=VER17 ${SET}/版本.ini ${FYDEOS_VERSION}:版17
	ini_get --set=VER16 ${SET}/版本.ini ${FYDEOS_VERSION}:版16
}
#------------------------------------------------------------------------------
function save_version {
	save_env --file=${cmdpath}/grubenv FYDEOS_VERSION
	ini_version
	export FYDEOS_VERSION VER17 VER16
	refresh_theme
	configfile ${SET}/2-4-1.版本.lst
}
#==============================================================================
default="'${FYDEOS_VERSION}'"
#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --hotkey "esc" {
	set SELECTED=版本
	configfile ${SET}/2-4.主题.lst
}
#==============================================================================
ini_version
#==============================================================================
#####----{条目}----
#------------------------------------------------------------------------------
menuentry "${VER17} 17" --class "版本/17-${dark}" --id "'17'" {
	set FYDEOS_VERSION=17
	save_version
}
#------------------------------------------------------------------------------
menuentry "${VER16} 16" --class "版本/16-${dark}" --id "'16'" {
	set FYDEOS_VERSION=16
	save_version
}
#==============================================================================
global_environment