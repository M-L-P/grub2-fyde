###############################################################################
#                                 [鼠标.lst]
#                          to list items of mouse
###############################################################################

#==============================================================================
#####----{功能}----
#------------------------------------------------------------------------------
function save_mouse {
	refresh_lang
	refresh_theme
	configfile ${SET}/2-5.鼠标.lst
}
#==============================================================================
default=${SELECTED}
#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --hotkey "esc" {
	set SELECTED=鼠标
	configfile ${SET}/2.设置.lst
}
#==============================================================================

#==============================================================================
#####----{条目}----
#------------------------------------------------------------------------------
menuentry "USB ${MENU_MOUSE}${USB_MOUSE}" --class "启事/${USB_MOUSE}" --id "USB" {
	if [ "开" != "${USB_MOUSE}" ]; then
		enable_usb
	else
		disable_usb
	fi
	save_env --file=${cmdpath}/grubenv USB_MOUSE
	set SELECTED=USB
	save_mouse
}
#------------------------------------------------------------------------------
menuentry "PS/2 ${TITLE_TRACKPAD} & ${MENU_MOUSE}${PS2_MOUSE}" --class "启事/${PS2_MOUSE}" --id "PS2" {
	if [ "开" != "${PS2_MOUSE}" ]; then
		enable_ps2
	else
		disable_ps2
	fi
	save_env --file=${cmdpath}/grubenv PS2_MOUSE
	set SELECTED=PS2
	save_mouse
}
#==============================================================================
global_environment