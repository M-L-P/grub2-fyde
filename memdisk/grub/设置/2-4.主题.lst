###############################################################################
#                                 [主题.lst]
#                      to list items used to set the theme
###############################################################################

#==============================================================================
#####----{条件}----
#------------------------------------------------------------------------------
if [ "关" != "${schedule}" ]; then
	set SWITCH_THEME=switch_theme
else
	set SWITCH_THEME=
fi
#==============================================================================
default=${SELECTED}
#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --hotkey "esc" {
	set SELECTED=主题
	configfile ${SET}/2.设置.lst
}
#==============================================================================

#==============================================================================
#####----{条目}----
#------------------------------------------------------------------------------
menuentry "${SUBMENU_FYDEOS_VERSION}${FYDEOS_VERSION}" --class "主题/版本" --id "版本" {configfile ${SET}/2-4-1.版本.lst}
#------------------------------------------------------------------------------
menuentry "${SUBMENU_SCHEDULE}" --class "主题/闹钟" --id "定时" {configfile ${SET}/2-4-2.定时.lst}
#------------------------------------------------------------------------------
${MENU_DATE}
#==============================================================================
global_environment