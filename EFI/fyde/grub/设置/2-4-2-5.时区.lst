#####----{功能}----
#------------------------------------------------------------------------------
function ini_timezone {
	ini_get --set=W12 ${SET}/时区.ini SXN${TIME_ZONE}:西12
	ini_get --set=W11 ${SET}/时区.ini SXN${TIME_ZONE}:西11
