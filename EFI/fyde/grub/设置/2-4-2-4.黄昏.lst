###############################################################################
#                                 [黄昏.lst]
#                          to list items of dusk time
###############################################################################

#==============================================================================
#####----{功能}----
#------------------------------------------------------------------------------
function ini_dusk {
	ini_get --set=DUSK14 ${SET}/黄昏.ini ${DUSK_HOUR}:昏14
	ini_get --set=DUSK15 ${SET}/黄昏.ini ${DUSK_HOUR}:昏15
	ini_get --set=DUSK16 ${SET}/黄昏.ini ${DUSK_HOUR}:昏16
	ini_get --set=DUSK17 ${SET}/黄昏.ini ${DUSK_HOUR}:昏17
	ini_get --set=DUSK18 ${SET}/黄昏.ini ${DUSK_HOUR}:昏18
	ini_get --set=DUSK19 ${SET}/黄昏.ini ${DUSK_HOUR}:昏19
	ini_get --set=DUSK20 ${SET}/黄昏.ini ${DUSK_HOUR}:昏20
	ini_get --set=DUSK21 ${SET}/黄昏.ini ${DUSK_HOUR}:昏21
	ini_get --set=DUSK22 ${SET}/黄昏.ini ${DUSK_HOUR}:昏22
}
#------------------------------------------------------------------------------
function save_dusk {
	save_env DUSK_HOUR
	ini_dusk
	export DUSK_HOUR DUSK14 DUSK15 DUSK16 DUSK17 DUSK18 DUSK19 DUSK20 DUSK21 DUSK22
	refresh_theme
	configfile ${SET}/2-4-2-4.黄昏.lst
}
#==============================================================================
default="'${DUSK_HOUR}'"
#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --hotkey "esc" {
	set SELECTED=黄昏
	configfile ${SET}/2-4-2.定时.lst
}
#==============================================================================
ini_dusk
#==============================================================================
#####----{条目}----
#------------------------------------------------------------------------------
menuentry "${DUSK14}  14" --class "黄昏时针/14" --id "'14'" {
	set DUSK_HOUR=14
	save_dusk
}
