###############################################################################
#                                 [破晓.lst]
#                          to list items of dawn time
###############################################################################

#==============================================================================
#####----{功能}----
#------------------------------------------------------------------------------
function ini_dawn {
	ini_get --set=DAWN2 ${SET}/破晓.ini ${DAWN_HOUR}:晓2
	ini_get --set=DAWN3 ${SET}/破晓.ini ${DAWN_HOUR}:晓3
	ini_get --set=DAWN4 ${SET}/破晓.ini ${DAWN_HOUR}:晓4
	ini_get --set=DAWN5 ${SET}/破晓.ini ${DAWN_HOUR}:晓5
	ini_get --set=DAWN6 ${SET}/破晓.ini ${DAWN_HOUR}:晓6
	ini_get --set=DAWN7 ${SET}/破晓.ini ${DAWN_HOUR}:晓7
	ini_get --set=DAWN8 ${SET}/破晓.ini ${DAWN_HOUR}:晓8
	ini_get --set=DAWN9 ${SET}/破晓.ini ${DAWN_HOUR}:晓9
	ini_get --set=DAWN10 ${SET}/破晓.ini ${DAWN_HOUR}:晓10
}
#------------------------------------------------------------------------------
function save_dawn {
	save_env DAWN_HOUR
	ini_dawn
	export DAWN_HOUR DAWN2 DAWN3 DAWN4 DAWN5 DAWN6 DAWN7 DAWN8 DAWN9 DAWN10
	refresh_theme
	configfile ${SET}/2-4-2-3.破晓.lst
}
#==============================================================================
default="'${DAWN_HOUR}'"
#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --hotkey "esc" {
	set SELECTED=破晓
	configfile ${SET}/2-4-2.定时.lst
}
#==============================================================================
ini_dawn
#==============================================================================
#####----{items}----
#------------------------------------------------------------------------------
menuentry "${DAWN2}  2" --class "破晓时针/2" --id "'2'" {
	set DAWN_HOUR=2
	save_dawn
}
