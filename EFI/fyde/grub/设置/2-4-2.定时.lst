###############################################################################
#                                [定时.lst]
#                         to list items of schedule
###############################################################################

#==============================================================================
#####----{功能}----
#------------------------------------------------------------------------------
function save_gear {
	save_env schedule MENU_FOUR MENU_DATE
	set SELECTED=定时
	refresh_lang
	refresh_theme
	configfile ${SET}/2-4-2.定时.lst
}
#==============================================================================
default=${SELECTED}
#==============================================================================
#####----{返回}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "启事/返回" --hotkey "esc" {
	set SELECTED=定时
	configfile ${SET}/2-4.主题.lst
}
#==============================================================================

#==============================================================================
#####----{变量标题}----
#------------------------------------------------------------------------------
if [ -n "${TIME_ZONE}" ]; then
	TZ=UTC${TIME_ZONE}
else
	TZ=GMT
fi
#==============================================================================

#==============================================================================
#####----{条目}----
#------------------------------------------------------------------------------
menuentry "${SUBMENU_ENABLE} | ${SUBMENU_DISABLE}" --class "启事/${schedule}" --id "定时" {
	if [ "开" != "${schedule}" ]; then
		export schedule=开 MENU_FOUR=menu_date MENU_DATE=
	else
		export schedule=关 MENU_FOUR=switch_theme MENU_DATE=menu_date
	fi
	save_gear
}
#------------------------------------------------------------------------------
menuentry "${SUBMENU_DAWN}${DAWN_HOUR}" --class "定时/日出" --id "破晓" {configfile ${SET}/2-4-2-3.破晓.lst}
#------------------------------------------------------------------------------
menuentry "${SUBMENU_DUSK}${DUSK_HOUR}" --class "定时/日落" --id "黄昏" {configfile ${SET}/2-4-2-4.黄昏.lst}
#------------------------------------------------------------------------------
menuentry "${SUBMENU_TIME_ZONE}${TZ}" --class "定时/经纬" --id "时区" {configfile ${SET}/2-4-2-5.时区.lst}
#==============================================================================
global_environment